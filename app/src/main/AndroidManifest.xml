<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.whyalwaysmea.systembar"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseAppTheme">
        <activity android:name="com.whyalwaysmea.systembar.MainActivity">

        </activity>
        <activity
            android:name="com.whyalwaysmea.systembar.color.ColorActivity1"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name="com.whyalwaysmea.systembar.color.ColorActivity2">
        </activity>
        <activity
            android:name="com.whyalwaysmea.systembar.picture.PictureActivity1"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name="com.whyalwaysmea.systembar.picture.PictureActivity2"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>